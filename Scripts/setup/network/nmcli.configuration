# NET1
sudo nmcli connection show

sudo nmcli connection modify uuid fe985ad8-3562-3a33-a521-14e27cce8dae ipv4.never-default TRUE
sudo nmcli connection modify uuid fe985ad8-3562-3a33-a521-14e27cce8dae ipv4.address 192.168.1.1/24
sudo nmcli connection modify uuid fe985ad8-3562-3a33-a521-14e27cce8dae ipv4.method manual
sudo nmcli connection modify uuid fe985ad8-3562-3a33-a521-14e27cce8dae ipv6.method ignore

sudo nmcli connection modify uuid 5d3c5a57-b6c6-3ff5-9981-70e833ee0cd1 ipv4.never-default TRUE
sudo nmcli connection modify uuid 5d3c5a57-b6c6-3ff5-9981-70e833ee0cd1 ipv4.address 192.168.2.1/24
sudo nmcli connection modify uuid 5d3c5a57-b6c6-3ff5-9981-70e833ee0cd1 ipv4.method manual
sudo nmcli connection modify uuid 5d3c5a57-b6c6-3ff5-9981-70e833ee0cd1 ipv6.method ignore

